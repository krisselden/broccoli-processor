{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "es5",
		"outDir": "dist",
		"sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
	},
  "exclude": ["node_modules", "dist"],
	"filesGlob": ["test/**/*.d.ts", "test/**/*.ts", "index.ts"]
}
